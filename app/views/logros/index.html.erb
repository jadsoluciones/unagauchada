
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h1>Logros</h1></div>
      <!-- <div class="panel-body">
        <p>...</p>
      </div> -->

      <!-- Table -->
      
      <table class="table">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Rango</th>
            <th colspan="3" class="boton"><%= link_to 'Agregar', new_logro_path, class: 'btn btn-success' %></th>
          </tr>
        </thead>
        
        <tbody>          
          <% @logros.each do |logro,index| %>
            <tr>
              <td><%= logro.titulo %></td>
              <td><%= logro.puntaje %> - <%= logro.next.puntaje - 1 %></td>
              <td class="boton"><%= link_to 'Ver', logro, class: 'btn btn-primary' %></td>
              <td class="boton"><%= link_to 'Editar', edit_logro_path(logro), class:'btn btn-info' %></td>
              <td class="boton"><%= link_to 'Borrar', logro, class: 'btn btn-danger', method: :delete, data: { confirm: '¿Está seguro de borrar?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>

