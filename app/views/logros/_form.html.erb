<%= form_for(@logro,:html => {:class => 'form-horizontal'}) do |f| %>
  <% if @logro.errors.any? %>
    <div class="bg-danger">
      <h3> Hay <%= pluralize(@logro.errors.count, "error","errores") %></h3>
      <p>El logro no puede ser guardado:</p>
      <ul>
      <% @logro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">  
    <%= f.label :titulo,'Título', class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :titulo, required:true, class:'form-control' %>
    </div>
  </div>
  <div class="col-sm-10 col-sm-offset-2">
    <p>El nombre del logro.</p>
   </div>
  <div class="form-group">
    <%= f.label :puntaje,'Puntos requeridos', class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
        <%= f.number_field :puntaje, required:true, class:'form-control' %>
    </div>
    <div class="col-sm-10 col-sm-offset-2">
      <p>La mínima cantidad de puntos para adquirir el logro.</p>
    </div>
  </div>
   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit value:'Guardar', class:'btn btn-default' %>
    </div>
  </div>
<% end %>
