<%= form_for(@logro,:html => {:class => 'form-horizontal'}) do |f| %>
  <% if @logro.errors.any? %>
    <div class="bg-danger">
      <h3> Hay <%= pluralize(@logro.errors.count, "error","errores") %></h3>
      <p>El logro no puede ser guardado:</p>
      <ul>
      <% @logro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">  
    <%= f.label :titulo, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
        <%= f.text_field :titulo, required:true, class:'form-control' %>
    </div> 
  </div>
  <div class="form-group">
    <%= f.label :puntaje, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
        <%= f.number_field :puntaje, required:true, class:'form-control' %>
    </div> 
  </div>
   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit value:'Guardar', class:'btn btn-default' %>
    </div>
  </div>
<% end %>
