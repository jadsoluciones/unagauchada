<div class="container">

    <div class="jumbotron" id="mi-perfil">

        <h1 class="h1-responsive">
          <%= image_tag @usuario.imagen, class:'rounded-circle' %>
          Mi Perfil
          <small>  
          <%= link_to edit_usuario_registration_path, class:'btn-floating btn-small blue' do %>
          <i class="fa fa-pencil"></i>
          <% end %>
          </small>
        </h1>
        <hr>
            <div class="row">
              <div class="col-xs-12 col-sm-4 text-xs-center pb-1">
                <a  data-div="#lista-postulaciones-espera" class="mostrar btn btn-blue-grey">
                  Ver mis postulaciones</a>
              </div>
              <div class="col-xs-12 col-sm-4 text-xs-center pb-1">
                <a  data-div="#lista-postulaciones-aceptada" class="mostrar btn btn-blue-grey">
                  Ver mis solucitudes</a>
              </div>
              <div class="col-xs-12 col-sm-4 text-xs-center pb-1">
                <a  data-div="#lista-gauchadas" class="mostrar btn btn-blue-grey">
                  Ver mis gauchadas</a>
              </div>
            </div>
        
        <hr>
        <div class="card-block">
            <div id="lista-postulaciones-espera" class="listas" style="display:none;"><%=render 'listado_espera'%></div>
            <div id="lista-postulaciones-aceptada" class="listas" style="display:none;"><%=render 'listado_aceptado'%></div>
            <div id="lista-gauchadas" class="listas" style="display:none;"><%=render 'listado_gauchadas'%></div>

          <%= form_for(@usuario) do |f| %>


          <div class="row pt-1">
              <div class="col-xs-12 col-sm-6">
                  <div class="md-form">
                      <i class="fa fa-user prefix"></i>
                      <%= f.text_field :nombre, class:'form-control', disabled:true %>
                      <%= f.label :nombre %>
                  </div>
              </div>
              <div class="col-xs-12 col-sm-6">
                  <div class="md-form">
                      <i class="fa fa-user prefix hidden-sm-up"></i>
                      <%= f.text_field :apellido, class:'form-control', disabled:true %>
                      <%= f.label :apellido %>
                  </div>
              </div>
          </div>

          <div class="row">
              <div class="col-xs-12 col-sm-6">
                  <div class="md-form">
                      <i class="fa fa-home prefix"></i>
                      <%= f.text_field :domicilio,class:'form-control', disabled:true %>
                      <%= f.label :domicilio %>
                  </div>
              </div>
              <div class="col-xs-12 col-sm-6">
                  <div class="md-form">
                      <i class="fa fa-heart prefix"></i>
                      <%= f.text_field :puntos,class:'form-control', disabled:true %>
                      <%= f.label :puntos %>
                  </div>
              </div>
          </div>

          <div class="row">
              <div class="col-xs-10 col-sm-6">
                  <div class="md-form">
                      <i class="fa fa-calendar prefix active"></i>
                        <%= f.label :fecNac, 'Fecha de nacimiento' %>
                        <%= f.text_field :fecNac, { :disabled => true, :class => "form-control", value: @usuario.fecNac.to_date.to_formatted_s(:long)}  %>
                  </div>
              </div>
              <%= form_for(@usuario.logro) do |j| %>
              <div class="col-xs-12 col-sm-6">
                  <div class="md-form">
                      <i class="fa fa-certificate prefix"></i>
                      <%= j.text_field :titulo, class:'form-control datepicker',disabled:true  %>
                      <%= j.label :titulo, 'TÃ­tulo' %>
                  </div>
              </div>
              <%end%>
          </div>

          <div class="row">
              <div class="col-xs-12">
                  <div class="md-form">
                      <i class="fa fa-id-card prefix"></i>
                      <%= f.number_field :DNI, class:'form-control', disabled:true %>
                      <%= f.label :DNI %>
                  </div>
              </div>
          </div>

          <div class="row">
              <div class="col-xs-12">
                  <div class="md-form">
                      <i class="fa fa-envelope prefix"></i>
                      <%= f.email_field :email, class:'form-control', disabled:true %>
                      <%= f.label :email%>
                  </div>
              </div>
          </div>

          <%end%>
          </div>

          <hr>
          <div class="card-data text-xs-left pl-1 pb-1">
              <%= link_to "Volver", :back %>
          </div>
    </div>
</div>
