<div class="container">
  <div class="row">
    <div class="col-xs-10 offset-xs-1 col-sm-6 offset-sm-3">
      <div class="card">
          <div class="card-block">

              <!--Header-->
              <div class="form-header unique-color ">
                  <h3><i class="fa fa-lock"></i> Registrarse:</h3>
              </div>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <!--Body-->
              <div class="row">
                  <div class="col-xs-6">
                      <div class="md-form">
                          <i class="fa fa-user prefix"></i>
                          <%= f.text_field :nombre, autofocus: true, required: true,class:'form-control' %>
                          <%= f.label :nombre %>
                      </div>
                  </div>
                  <div class="col-xs-6">
                      <div class="md-form">
                          <%= f.text_field :apellido, required: true,class:'form-control' %>
                          <%= f.label :apellido %>
                      </div>
                  </div>
              </div>

              <div class="row">
                  <div class="col-xs-12">
                      <div class="md-form">
                          <i class="fa fa-home prefix"></i>
                          <%= f.text_field :domicilio, required: true,class:'form-control' %>
                          <%= f.label :domicilio %>
                      </div>
                  </div>
              </div>

              <div class="row">
                  <div class="col-xs-12">
                      <div class="md-form select-fecha">
                          <i class="fa fa-calendar prefix"></i>
                          <div class="select-wrapper">
                            <%= f.label :fecNac, 'Fecha de nacimiento' %>
                            <%= f.date_select :fecNac, {:start_year => 1920,:end_year =>
                            (Time.now.year - 18)},{ :required => true, :class => "browser-default"}  %>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="row">
                <div class="col-xs-12 text-muted font-italic">
                   Debe ser mayor de 18 años para poder registrarse en el sistema
                </div>
              </div>

              <div class="row">
                  <div class="col-xs-12">
                      <div class="md-form">
                          <i class="fa fa-id-card prefix"></i>
                          <%= f.number_field :DNI, required: true,class:'form-control' %>
                          <%= f.label :DNI %>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-xs-12">
                      <div class="md-form">
                        <div class="field">
                          <i class="fa fa-envelope prefix"></i>
                          <%= f.email_field :email, required: true,class:'form-control' %>
                          <%= f.label :email%>
                        </div>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-xs-6">
                      <div class="md-form">
                        <div class="field">
                          <i class="fa fa-lock prefix"></i>
                          <%= f.password_field :password, required: true,autocomplete: "off",class:'form-control' %>
                          <%= f.label :password, 'Contraseña' %>
                        </div>
                      </div>
                  </div>
                  <div class="col-xs-6">
                      <div class="md-form">
                        <div class="field">
                          <%= f.password_field :password_confirmation,required: true, autocomplete: "off",class:'form-control' %>
                          <%= f.label :password_confirmation %>
                        </div>
                      </div>
                  </div>
              </div>
              <div class="row">
                  <div class="col-xs-6">
                      <% if @minimum_password_length %>
                      <p class="text-warning pl-3"><%= @minimum_password_length %> caracteres mínmos</p>
                      <% end %>
                  </div>
              </div>
              <div class="text-xs-center">
                <div class="actions">
                  <%= f.submit "Registrarse", class:'btn btn-primary' %>
                </div>
              </div>

          </div>

          <% end %>

          <!--Footer-->
          <div class="modal-footer">
              <div class="options">
                  <%= render "usuarios/shared/links" %>
              </div>
          </div>

      </div>
      <!--/Form with header-->

    </div>
  </div>
</div>
