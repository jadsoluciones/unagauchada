<% gauchadas = Gauchada.all%>
<% gauchadas.each do |gauchada| %>
	<tr>
			<div><h3><td> <%= link_to gauchada.titulo, gauchada %> </td></h3>
			<p><td> <%= gauchada.descripcion %> </td></p>
			<p> <%= gauchada.ciudad%> </p>
			<td>
				<%= link_to "Editar", edit_gauchada_path(gauchada), class: 'btn btn-info btn-sm' %>
				<%= link_to "Eliminar", gauchada, method: :delete, class: 'btn btn-danger btn-sm' %>
			</td>
			</div>
		</tr>
	<% end %>

	<% if gauchadas.size == 0 %>
		<tr> <td colspan="3"> No hay gauchadas </td> </tr>
	<% end %>