<div class="container">
  <div class="row">
    <div class="col-xs-10 offset-xs-1 col-sm-8 col-md-6 offset-sm-2 offset-md-3">
      <div class="card">
        <h3 class="card-header primary-color white-text">Postulados</h3>

        <% if @postulados.count > 0 %>
          <div class="card-block">
            <table class="table">
              <thead>
                <tr>
                  <th colspan="2">Nombre</th>
                  <th rowspan="2">Descripci√≥n</th>
                  <th rowspan="2">Fecha</th>
                  <th rowspan="2" colspan="2" class="form-control datepicker"></th>
                </tr>
              </thead>
              <tbody>
                    <% @postulados.each do |postulado| %>
                    <tr>
                      <td><%= postulado.usuario.nombre %></td>
                      <td><%= postulado.usuario.apellido %></td>
                      <td><%= postulado.descripcion %></td>
                      <td><%= postulado.fecha %></td>
                      <% if postulado.estado == 'En espera'%>
                          
                          <td class="col-xs-0 align-bottom">
        												<a href="/postulacions/<%=@gauchada.id%>/cambiar_estado?num=0"
        													class='btn btn-blue-grey waves-effect waves-light'>POSTULARSE</a>
      												<%= link_to "Rechazar", cambiar_estado_postulacion_path, num: 1,
      												class:'btn btn-danger waves-effect waves-light' %>
      										</td>
                      <% else %>
                        <td rowspan="2" colspan="2">
                          Ustede ha <%postulado.estado%> a esta persona
                        </td>
                      <% end %>
                    <% end %>
              </tbody>
            </table>
            <%else%>
              <h3> No hay postulados en su Gauchada </h3>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
