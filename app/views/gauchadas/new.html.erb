<div class="container">
        
    <div class="jumbotron">
        <h1 class="h1-responsive">Crear Gauchada</h1>
        <hr>
        <div class="card-block">
            <% if current_usuario.puntos < 1 %>          
                <h6> 
                    <span class="animated flash infinite text-danger">No tienes puntos suficientes para crear una gauchada! 
                    </span>
                    <%= link_to "Comprar", new_compra_path, class: 'btn btn-warning btn-sm' %>                 
                </h6>
            <% end %>    
            <%= render 'form' %>
        </div>
        <hr>
        <div class="card-data text-xs-left pl-1 pb-1">    
            <%= link_to "Volver", :back %>
        </div>
    </div>
</div>