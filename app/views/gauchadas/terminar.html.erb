
<div class="container">
  <div class="row">
    <div class="col-xs-10 offset-xs-1 col-sm-8 col-md-8 offset-sm-2 offset-md-2">
      <div class="card">
        <h3 class="card-header primary-color white-text">Finalizar</h3>

          <div class="card-block">
            <table class="table">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Descripción</th>
                  <th>Fecha</th>
                  <th>¿Gauchada concretada?</th>
                </tr>
              </thead>
              <tbody>
                    <tr>
                        <td><%= @postulante.usuario.nombre %></td>
                        <td><%= @postulante.usuario.apellido %></td>
                        <td><%= @postulante.descripcion %></td>
                        <td><%= @postulante.fecha.strftime "%d/%m/%Y" %></td>
                            <td class="col-xs-0 align-bottom">
                              <a href="/postulacions/cambiar_estado_aceptado"
                                class='btn btn-success waves-effect waves-light'
                                onClick="return confirm('¿Desea aceptar a esta persona?');">Concreta</a>
                              <a href="/postulacions/cambiar_estado_rechazado"
                                class='btn btn-danger waves-effect waves-light'
                                onClick="return confirm('¿Desea rechazar a esta persona?');">No concretada</a>
        										</td>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
